= render 'page/nav'
.hero-image
  = image_tag("Home Page/hero.jpg", :alt => "Chisom", class:'top_hero_image')
  .wrap
    .search
      = form_tag(venues_path, :method => "get", :id => 'search_form') do
        = select_tag((:category), options_for_select([["Hall","hall"],["Bar","bar"],["Meeting Room","meeting room"],["Reception","reception"],["Kids Party","kids party"],["Exhibition","exhibition"],["Performance Venue","Performance Venue"],["Wedding Venue","Wedding Venue"],["Private Room","private room"],["Conference Room","conference room"]],params[:category].to_i), prompt: "Venue Type", class:"searchTerm2")
        .searchline
        = text_field_tag (:city), params[:city], placeholder: "location ", required: true, :class => 'searchTerm', autocomplete: 'off'
        = submit_tag "Search", :class => "searchButton"
  .hero-text
    %h1 Find Your Perfect Venue
    %h2.two As Easy As Possible

.explore_text
  %h1 
    Explore
    %br>/
    Our
    %br>/
    Venues

  #posts
    - @venue.each do |venue|
      .post
        .post_image
          = link_to ( image_tag venue.thumbnail.url(:medium)), venue, target: :_blank
        .post_content
          = link_to venue.name, venue, :class => 'venuetext', target: :_blank
          %br/
          %br/
          = link_to venue.category, venue, :class => 'venuecat', target: :_blank
          %br/
          %br/
          = link_to venue.city, venue, :class => 'venuecity', target: :_blank
= render 'page/footer2'

