

.hero-image
  = render 'page/nav'
  .hero-text
    %h1 Find Your Perfect Venue
    %h2.two As Easy As Possible
    #text2
      %br/
      %p Khrez is the fastest and easiest way to find your 
      %p perfect venue for any event / meeting you 
      %p may be hosting 
  .search
    = form_tag(venues_path, :method => "get", :id => 'form') do
      = text_field_tag (:city), params[:city], placeholder: "location ", required: true, :id => 'search'
      %br/
      = select_tag((:category), options_for_select([["Hall","hall"],["Bar","bar"],["Meeting Room","meeting room"],["Reception","reception"],["Kids Party","kids party"],["Exhibition","exhibition"],["Performance Venue","Performance Venue"],["Wedding Venue","Wedding Venue"],["Private Room","private room"],["Conference Room","conference room"]],params[:category].to_i), prompt: "Venue Type", :id => 'cat')
      %br/
      %br/
      %br/
      = submit_tag "Search", :name => nil, :class => "searchbutton"

%br/
%br/
%br/

%h1#exloretext
  Explore
  %span#fullstop .

%br/
%br/
%br/
%br/
.top
  #posts
    - @venue.each do |venue|
      .post
        .post_image
          = link_to ( image_tag venue.thumbnail.url(:medium)), venue, target: :_blank
        .post_content
          = link_to venue.name, venue, :class => 'venuetext', target: :_blank
          %br/
          %br/
          = link_to venue.category, venue, :class => 'venuecat', target: :_blank
          %br/
          %br/
          = link_to venue.city, venue, :class => 'venuecit', target: :_blank

= render 'page/footer'

