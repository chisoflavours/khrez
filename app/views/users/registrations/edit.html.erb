<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="field">
      <h3 class="colour">Email</h3>
      <br>
      <%= f.input :email, required: true, input_html: { class: 'in' }, label: false, placeholder: "hi@gmail.com" %>
      
    </div>
    <br>
    <div class="field">
      <h3 class="colour">Name</h3>
      <br>
      <%= f.input :name, autocomplete: "off", required: false , input_html: { class: 'in' }, label: false, placeholder: "Logan A"%>
    </div>
    <br>
    <div class="field">
      <h3 class="colour">Number</h3>
      <br>
      <%= f.input :number, autocomplete: "off", required: false , input_html: { class: 'in' }, label: false, placeholder: "123456789"%>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <br>
    <div class="field">
    <h3 class="colour">Change Password</h3>
    <br>
    <%= f.input :password, autocomplete: "off", required: false , input_html: { class: 'in' }, label: false, placeholder: "Password 123"%>
    </div>
    <br>
    <div class="field">
    <h3 class="colour">Password Confirmation</h3>
    <br>
    <%= f.input :password_confirmation, required: false , input_html: { class: 'in' }, label: false, placeholder: "Password 123" %>
    </div>
    <br>
    <br>
    <br>
    <br>
    <div class="field">
    <h3 class="colour">Current Password</h3>
    <br>
    <%= f.input :current_password, required: false , input_html: { class: 'in' }, label: false, placeholder: "Password 123" %>
    </div>
    
  </div>
<br>
<br>
  <div class="field">
    <%= f.button :submit, "Update" ,:class => 'button'%>
  </div>
<% end %>

<br>
<br>

<div class="field">

<p><%= link_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,:class => 'link' %></p>

</div>

<br>
