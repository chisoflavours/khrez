<%= render "page/nav" %>

<h2 id="login">Log in</h2>
<br>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <br>
  <div class="field">
    <%= f.input :email, required: true , input_html: { class: 'in' }, label: false, placeholder: "Email", autofocus: true %>
    <hr class="hr_login">
  </div> 
  <br>
  <div class="field">
    <%= f.input :password, required: true , input_html: { class: 'in' }, label: false, placeholder: "Password"%>
    <hr class="hr_login">
  </div>  
  <br>
<br>
 <div class="field">
  <div class="form-actions">
    <%= f.button :submit, "Log in" ,:class => 'button'%>
  </div>
  </div>
<br>
<br>
<% end %>

