<%= render "page/nav" %>
<h2 id="login">Sign up</h2>

<br>
<br>
<br>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <%= f.input :email, required: true, autofocus: true, input_html: { class: 'in' }, label: false, placeholder: "Email" %>
  </div>
  <br>
  <div class="field">  
    <%= f.input :name, required: true, autofocus: true, input_html: { class: 'in' }, label: false, placeholder: "Name" %>
  </div> 
  <br>
  <div class="field">  
    <%= f.input :phone, required: true, autofocus: true, input_html: { class: 'in' }, label: false, placeholder: "Phone Number" %>
  </div>  
  <br>
    <div class="field">
    <%= f.input :password, required: true, input_html: { class: 'in' }, label: false, placeholder: "Password" %>
    </div>
    <br>
    <div class="field">
    <%= f.input :password_confirmation, required: true, input_html: { class: 'in' }, label: false, placeholder: "Password Confirmation" %>
    </div>
    <br>
  </div>

<br>
<br>

<div class="field">
  <div class="form-actions">
    <%= f.button :submit, "Sign up" ,:class => 'button'%>
  </div>
</div>

<br>
<br>

<% end %>

<div class="field">
<%= render "admins/shared/links" %>
</div>

